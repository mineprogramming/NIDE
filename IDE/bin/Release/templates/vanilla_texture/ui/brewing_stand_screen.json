{
  "namespace": "brewing_stand",
  //-----------------------------------------------------------
  // Images
  //-----------------------------------------------------------

  "brewing_pipes": {
    "type": "image",
    "layer": 2,
    "texture": "textures/gui/spritesheet2",
    "anchor_from": "center",
    "anchor_to": "center",
    "size": [ 30, 20 ],
    "uv": [ 59, 1 ],
    "uv_size": [ 30, 20 ]
  },

  "bottle_empty_image": {
    "type": "image",
    "texture": "textures/gui/spritesheet2",
    "layer": 2,
    "offset": [ 1, -1 ],
    "size": [ 16, 16 ],
    "uv": [ 42, 0 ],
    "uv_size": [ 16, 16 ],
    "anchor_from": "center",
    "anchor_to": "center",
    "bindings": [
      {
        "binding_name": "#empty_bottle_image_visible",
        "binding_name_override": "#visible",
        "binding_type": "collection",
        "binding_collection_name": "$item_collection_name"
      }
    ]
  },

  "bubbles_empty_image": {
    "type": "image",
    "texture": "textures/gui/spritesheet2",
    "layer": 2,
    "offset": [ -16, -15 ],
    "size": [ 12, 29 ],
    "uv": [ 0, 0 ],
    "uv_size": [ 12, 29 ],
    "anchor_from": "center",
    "anchor_to": "center"
  },

  "bubbles_full_image": {
    "type": "image",
    "texture": "textures/gui/spritesheet2",
    "layer": 3,
    "offset": [ -16, -15 ],
    "size": [ 12, 29 ],
    "uv": [ 12, 0 ],
    "uv_size": [ 12, 29 ],
    "nineslice_size": 0.0,
    "clip_direction": "down",
    "bindings": [
      {
        "binding_name": "#brewing_bubbles_ratio",
        "binding_name_override": "#clip_ratio",
        "binding_condition": "always"
      }
    ]
  },

  "brewing_arrow_empty_image": {
    "type": "image",
    "layer": 1,
    "texture": "textures/gui/spritesheet2",
    "offset": [ 15, -13 ],
    "anchor_from": "center",
    "anchor_to": "center",
    "size": [ 9, 28 ],
    "uv": [ 24, 0 ],
    "uv_size": [ 9, 28 ]
  },

  "brewing_arrow_full_image": {
    "type": "image",
    "layer": 3,
    "texture": "textures/gui/spritesheet2",
    "anchor_from": "center",
    "anchor_to": "center",
    "offset": [ 15, -13 ],
    "size": [ 9, 28 ],
    "uv": [ 33, 0 ],
    "uv_size": [ 9, 28 ],
    "nineslice_size": 0.0,
    "clip_direction": "up",
    "bindings": [
      {
        "binding_name": "#brewing_arrow_ratio",
        "binding_name_override": "#clip_ratio",
        "binding_condition": "always"
      }
    ]
  },

  //-----------------------------------------------------------
  // Screen
  //-----------------------------------------------------------

  "brewing_label": {
    "type": "label",
    "offset": [ 0, -3 ],
    "anchor_from": "top_middle",
    "anchor_to": "top_middle",
    "text": "item.brewing_stand.name",
    "color": [ 0.25, 0.25, 0.25, 1.0 ],
    "layer": 2
  },

  "brewingstand_output_item@common.container_item": {
    "size": [ 18, 18 ],
    "$cell_overlay_ref": "brewing_stand.bottle_empty_image",
    "$item_collection_name": "brewing_result_items"
  },

  "brewing_output_slots": {
    "type": "grid",
    "size": [ 54, 18 ],
    "offset": [ 0, 18 ],
    "grid_dimensions": [ 3, 1 ],
    "collection_name": "brewing_result_items",
    "controls": [
      {
        "left_offset": {
          "type": "panel",
          "grid_position": [ 0, 0 ],
          "controls": [
            {
              "output_grid_item1@brewing_stand.brewingstand_output_item": {
                "offset": [ -5, -7 ]
              }
            }
          ]
        }
      },
      {
        "output_grid_item2@brewing_stand.brewingstand_output_item": {
          "grid_position": [ 1, 0 ]
        }
      },
      {
        "right_offset": {
          "type": "panel",
          "grid_position": [ 2, 0 ],
          "controls": [
            {
              "output_grid_item3@brewing_stand.brewingstand_output_item": {
                "offset": [ 5, -7 ]
              }
            }
          ]
        }
      }
    ]
  },

  "brewing_input_slot": {
    "type": "panel",
    "size": [ 18, 18 ],
    "offset": [ 0, -18 ],
    "controls": [
      {
        "input_grid": {
          "type": "grid",
          "grid_dimensions": [ 1, 1 ],
          "controls": [
            {
              "input_grid_item@common.container_item": {
                "grid_position": [ 0, 0 ],
                "$item_collection_name": "brewing_input_item"
              }
            }
          ]
        }
      }
    ]
  },

  "brewing_panel_top_half": {
    "type": "panel",
    "size": [ "100%", "50% - 12px" ],
    "offset": [ 0, 7 ],
    "anchor_to": "top_middle",
    "anchor_from": "top_middle",
    "controls": [
      { "brewing_label@brewing_label": { } },
      { "brewing_stand_pictogram@brewing_stand_pictogram": { } }
    ]
  },

  "brewing_stand_pictogram": {
    "type": "panel",
    "size": [ "40%", "80%" ],
    "controls": [
      { "brewing_input_slot@brewing_input_slot": { } },
      { "brewing_output_slots@brewing_output_slots": { } },
      { "brewing_arrow_empty_image@brewing_arrow_empty_image": { } },
      { "brewing_arrow_full_image@brewing_arrow_full_image": { } },
      { "bubbles_empty_image@bubbles_empty_image": { } },
      { "bubbles_full_image@bubbles_full_image": { } },
      { "brewing_pipes@brewing_pipes": { } }
    ]
  },

  "brewing_stand_panel": {
    "type": "panel",
    "controls": [
      { "container_gamepad_helpers@common.container_gamepad_helpers": { } },
      { "screen_background@common.screen_background": { } },
      {
        "root_panel@common.root_panel": {
          "layer": 1,
          "controls": [
            { "input_panel@common.input_panel": { } },
            { "common_panel@common.common_panel": { } },
            {
              "furnace_screen_inventory": {
                "type": "panel",
                "layer": 5,
                "controls": [
                  { "brewing_panel_top_half@brewing_stand.brewing_panel_top_half": { } },
                  { "inventory_panel_bottom_half_with_label@common.inventory_panel_bottom_half_with_label": { } },
                  { "hotbar_grid@common.hotbar_grid_template": { } },
                  { "inventory_take_progress_icon_button@common.inventory_take_progress_icon_button": { } }
                ]
              }
            },
            { "inventory_selected_icon_button@common.inventory_selected_icon_button": { } }
          ]
        }
      }
    ]
  },
  "brewing_stand_screen@common.inventory_screen_common": {
    "$close_on_player_hurt|default": false,
    "close_on_player_hurt": "$close_on_player_hurt",
    "variables": [
      {
        "requires": "$desktop_screen",
        "$visible_screen": "brewing_stand.brewing_stand_panel"
      },
      {
        "requires": "$pocket_screen",
        "$visible_screen": "brewing_stand_pocket.brewing_stand_panel",
        "$close_on_player_hurt": true
      }
    ],
    "controls": [
      { "screen@$visible_screen": { } }
    ]
  }
}