{
  "namespace": "horse_pocket",
  //---------------------------------------------------------------------------
  // Screens
  //---------------------------------------------------------------------------

  "flying_item_renderer": {
    "type": "custom",
    "renderer": "flying_item_renderer",
    "layer": 20,
    "property_bag": {
      "#flying_item_renderer": true
    }
  },

  "horse_panel": {
    "type": "panel",
    "controls": [
      { "gamepad_helpers@pocket_containers.gamepad_helpers": { } },
      { "inventory_selected_icon_button@common.inventory_selected_icon_button": { } },
      {
        "root_panel@common.root_panel": {
          "size": [ "100%-8px", "100%-4px" ],
          "layer": 1,
          "controls": [
            { "hold_icon@common.inventory_take_progress_icon_button": { "layer": 1 } },
            { "flying_item_renderer@horse_pocket.flying_item_renderer": { } },
            {
              "background_image@horse_pocket.background_image": {
                "anchor_from": "top_right",
                "anchor_to": "top_right",
                "size": [ "100%-30px", "100%" ],
                "layer": 2
              }
            },
            { "interactive_tabs@horse_pocket.interactive_tabs": { } },
            {
              "close_button@horse_pocket.close_button": {
                "focus_enabled": false,
                "offset": [ 6, 6 ],
                "layer": 5
              }
            },
            {
              "inventory@horse_pocket.half_screen_inventory": {
                "anchor_from": "top_left",
                "anchor_to": "top_left",
                "offset": [ 30, 0 ],
                "$container_size": 36,
                "$pane_collection": "combined_hotbar_and_inventory_items"
              }
            },
            {
              "equipment@horse_pocket.equip_middle_screen": {
                "anchor_from": "top_middle",
                "anchor_to": "top_middle",
                "offset": [ 15, 0 ]
              }
            },
            {
              "chest_tab": {
                "type": "panel",
                "anchor_from": "top_left",
                "anchor_to": "top_left",
                "visible": false,
                "controls": [
                  { "visual_tabs_chest@horse_pocket.visual_tabs_chest": { } },
                  {
                    "chest@horse_pocket.half_screen_chest": {
                      "anchor_from": "top_right",
                      "anchor_to": "top_right",
                      "$container_size": 15,
                      "$pane_collection": "container_items"
                    }
                  }
                ]
              }
            },
            {
              "renderer_tab": {
                "type": "panel",
                "anchor_from": "top_left",
                "anchor_to": "top_left",
                "controls": [
                  { "visual_tabs_equip@horse_pocket.visual_tabs_equip": { } },
                  {
                    "renderer@horse_pocket.half_screen_renderer": {
                      "anchor_from": "right_middle",
                      "anchor_to": "right_middle"
                    }
                  }
                ]
              }
            }
          ]
        }
      }
    ]
  },

  "background_image": {
    "type": "image",
    "texture": "textures/gui/spritesheet",
    "uv": [ 34, 43 ],
    "uv_size": [ 14, 14 ],
    "nineslice_size": 4.0
  },

  "dark_bg": {
    "type": "image",
    "texture": "textures/gui/gui",
    "uv": [ 200, 46 ],
    "uv_size": [ 16, 16 ],
    "nineslice_size": 1.0
  },

  "renderer_bg": {
    "type": "image",
    "texture": "textures/gui/spritesheet",
    "uv": [ 0, 32 ],
    "uv_size": [ 8, 8 ],
    "nineslice_size": 1.0
  },

  "saddle_image": {
    "type": "image",
    "texture": "textures/gui/newgui/empty_horse_slot_saddle",
    "uv": [ 0, 0 ],
    "uv_size": [ 16, 16 ],
    "alpha": 0.7
  },

  "armor_image": {
    "type": "image",
    "texture": "textures/gui/newgui/empty_horse_slot_armor",
    "uv": [ 0, 0 ],
    "uv_size": [ 16, 16 ],
    "alpha": 0.7
  },

  "panel_outline": {
    "type": "image",
    "nineslice_size": 1.0,
    "texture": "textures/gui/spritesheet",
    "uv": [ 28, 42 ],
    "uv_size": [ 4, 4 ]
  },

  "close_button_default": {
    "type": "image",
    "texture": "textures/gui/spritesheet",
    "uv": [ 60, 0 ],
    "uv_size": [ 18, 18 ]
  },

  "close_button_pressed@close_button_default": {
    "uv": [ 78, 0 ]
  },

  "close_button@common.button": {
    "$pressed_button_name": "button.menu_exit",
    "size": [ 21, 21 ],
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "controls": [
      { "default@close_button_default": { } },
      { "hover@close_button_default": { } },
      { "pressed@close_button_pressed": { } }
    ]
  },

  "base_grid": {
    "type": "grid",
    "grid_rescaling_type": "horizontal",
    "anchor_to": "top_left",
    "anchor_from": "top_left",
    "size": [ "100% - 4px", "default" ],
    "maximum_grid_items": "$container_size",
    "collection_name": "$pane_collection",
    "grid_item_template": "common.pocket_ui_container_item",
    "$item_collection_name": "$pane_collection"
  },

  "inventory_grid@horse_pocket.base_grid": { },
  "chest_grid@horse_pocket.base_grid": { },

  "base_grid_panel": {
    "type": "panel",
    "size": [ "100%-16px", "100%-16px" ],
    "layer": 3,
    "controls": [
      { "panel_outline@panel_outline": { } },
      {
        "scrolling_panel@common.scrolling_panel": {
          "size": [ "100%-2px", "100%-2px" ],
          "anchor_to": "top_left",
          "anchor_from": "top_left",
          "$show_background": false,
          "$scrolling_pane_size": [ "100%-2px", "100%-2px" ],
          "offset": [ 1, 1 ],
          "$scroll_size": [ "8px", "100%" ],
          "$scroll_box_mouse_image_control": "common-classic.button_state_default"
        }
      },
      { "dark_bg@dark_bg": { } }
    ]
  },

  // these are separated so that grid scrolling is unique to each panel (both would scroll the same panel otherwise)
  "inventory_panel@horse_pocket.base_grid_panel": {
    "$scrolling_content": "horse_pocket.inventory_grid"
  },

  "chest_panel@horse_pocket.base_grid_panel": {
    "$scrolling_content": "horse_pocket.chest_grid"
  },

  "half_screen": {
    "type": "panel",
    "size": [ "50%-32px", "100%" ]
  },

  "middle_screen": {
    "type": "panel",
    "anchor_from": "top_middle",
    "anchor_to": "top_middle",
    "size": [ "32px", "100%" ]
  },

  "half_screen_inventory@horse_pocket.half_screen": {
    "controls": [
      { "inventory_panel@inventory_panel": { } }
    ]
  },

  "half_screen_chest@horse_pocket.half_screen": {
    "controls": [
      { "chest_panel@chest_panel": { } }
    ]
  },

  "half_screen_renderer@horse_pocket.half_screen": {
    "controls": [
      {
        "renderer_bg@horse_pocket.renderer_bg": {
          "size": [ "100%-16px", "100%-16px" ],
          "layer": 3
        }
      },
      {
        "horse_custom": {
          "type": "custom",
          "renderer": "live_horse_renderer",
          "layer": 4,
          "anchor_from": "center",
          "anchor_to": "center",
          "size": [ "40%", "40%" ],
          "offset": [ "20%", "45%" ],
          "bindings": [
            {
              "binding_name": "#entity_id"
            }
          ]
        }
      }
    ]
  },

  // insert spacing between grid items!
  "equip_container_item@common.pocket_ui_container_item": {
    "size": [ 32, 32 ]
  },

  "equip_grid": {
    "type": "grid",
    "collection_name": "horse_equip_items",
    "grid_item_template": "@horse_pocket.equip_container_item",
    "grid_dimension_binding": "#equip_grid_dimensions",
    "$item_collection_name": "horse_equip_items",
    "bindings": [
      {
        "binding_name": "#equip_grid_dimensions"
      }
    ]
  },

  "equip_middle_screen@horse_pocket.middle_screen": {
    "controls": [
      {
        "equip_grid_panel": {
          "type": "panel",
          "size": [ 32, 64 ],
          "controls": [
            { "equip_grid@horse_pocket.equip_grid": { } },
            {
              "centered@horse_pocket.saddle_image": {
                "size": [ 16, 16 ],
                "layer": 6,
                "bindings": [
                  {
                    "binding_name": "#sadle_slot_centered",
                    "binding_name_override": "#visible"
                  }
                ]
              }
            },
            {
              "offset@horse_pocket.saddle_image": {
                "size": [ 16, 16 ],
                "offset": [ 0, -16 ],
                "layer": 6,
                "bindings": [
                  {
                    "binding_name": "#has_armor_slot",
                    "binding_name_override": "#visible"
                  }
                ]
              }
            },
            {
              "armor_image@horse_pocket.armor_image": {
                "size": [ 16, 16 ],
                "offset": [ 0, 16 ],
                "layer": 6,
                "bindings": [
                  {
                    "binding_name": "#has_armor_slot",
                    "binding_name_override": "#visible"
                  }
                ]
              }
            }
          ]
        }
      }
    ]
  },

  "interactive_tabs": {
    "type": "panel",
    "controls": [
      {
        "renderer_tab_interactive@common.legacy_tab": {
          "anchor_from": "bottom_left",
          "anchor_to": "bottom_left",
          "size": [ 32, 32 ],
          "offset": [ 0, -2 ],
          "tab_index": 0,
          "tab_content": "renderer_tab",
          "$tab_button_name": "button.equip_tab"
        }
      },
      {
        "chest_tab_interactive@common.legacy_tab": {
          "anchor_from": "bottom_left",
          "anchor_to": "bottom_left",
          "size": [ 32, 32 ],
          "offset": [ 0, -36 ],
          "tab_index": 1,
          "tab_content": "chest_tab",
          "$tab_button_name": "button.chest_tab",
          "bindings": [
            {
              "binding_name": "#is_chested",
              "binding_name_override": "#visible"
            }
          ]
        }
      }
    ]
  },

  "tab_front": {
    "type": "image",
    "layer": 3,
    "texture": "textures/gui/spritesheet",
    "uv": [ 49, 43 ],
    "uv_size": [ 13, 14 ],
    "nineslice_size": 4.0
  },

  "tab_back@horse_pocket.tab_front": {
    "layer": 1
  },

  "close_tab@tab_front": {
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "size": [ 32, 32 ]
  },

  "item_icon_renderer": {
    "type": "custom",
    "renderer": "inventory_item_renderer",
    "size": [ 24, 24 ],
    "layer": 5
  },

  "saddle_icon_front@horse_pocket.item_icon_renderer": {
    "property_bag": {
      "#item_id_aux": 21561344
    }
  },

  "chest_icon_front@horse_pocket.item_icon_renderer": {
    "property_bag": {
      "#item_id_aux": 3538944
    }
  },

  "visual_tabs_equip": {
    "type": "panel",
    "controls": [
      { "close_tab@horse_pocket.close_tab": { } },
      {
        "equip@tab_front": {
          "anchor_from": "bottom_left",
          "anchor_to": "bottom_left",
          "size": [ 32, 32 ],
          "offset": [ 0, -2 ]
        }
      },
      {
        "chest@tab_back": {
          "anchor_from": "bottom_left",
          "anchor_to": "bottom_left",
          "size": [ 32, 32 ],
          "offset": [ 0, -36 ],
          "bindings": [
            {
              "binding_name": "#is_chested",
              "binding_name_override": "#visible"
            }
          ]
        }
      },
      {
        "chest_icon@chest_icon_front": {
          "anchor_from": "bottom_left",
          "anchor_to": "bottom_left",
          "size": [ 24, 24 ],
          "offset": [ 9, -37 ],
          "bindings": [
            {
              "binding_name": "#is_chested",
              "binding_name_override": "#visible"
            }
          ]
        }
      },
      {
        "equip_icon@saddle_icon_front": {
          "anchor_from": "bottom_left",
          "anchor_to": "bottom_left",
          "size": [ 24, 24 ],
          "offset": [ 9, -3 ]
        }
      }
    ]
  },

  "visual_tabs_chest": {
    "type": "panel",
    "controls": [
      { "close_tab@horse_pocket.close_tab": { } },
      {
        "equip@tab_back": {
          "anchor_from": "bottom_left",
          "anchor_to": "bottom_left",
          "size": [ 32, 32 ],
          "offset": [ 0, -2 ]
        }
      },
      {
        "chest@tab_front": {
          "anchor_from": "bottom_left",
          "anchor_to": "bottom_left",
          "size": [ 32, 32 ],
          "offset": [ 0, -36 ],
          "bindings": [
            {
              "binding_name": "#is_chested",
              "binding_name_override": "#visible"
            }
          ]
        }
      },
      {
        "chest_icon@chest_icon_front": {
          "anchor_from": "bottom_left",
          "anchor_to": "bottom_left",
          "size": [ 24, 24 ],
          "offset": [ 9, -37 ],
          "bindings": [
            {
              "binding_name": "#is_chested",
              "binding_name_override": "#visible"
            }
          ]
        }
      },
      {
        "equip_icon@saddle_icon_front": {
          "anchor_from": "bottom_left",
          "anchor_to": "bottom_left",
          "size": [ 24, 24 ],
          "offset": [ 9, -3 ]
        }
      }
    ]
  }
}