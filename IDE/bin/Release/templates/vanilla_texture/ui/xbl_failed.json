{
  "namespace": "xbl_failed",



  "Xbox_icon": {
    "type": "image",
    "texture": "textures/gui/newgui/xbox4",
    "layer": 3,
    "uv": [ 0, 0 ],
    "uv_size": [ 27, 27 ],
    "size": [ 20, 20 ]
  },

  "xbl_signin_label": {
    "type": "panel",
    "layer": 2,
    "controls": [
      {
        "Xbox_icon@Xbox_icon": {
          "anchor_from": "left_middle",
          "anchor_to": "left_middle",
          "offset": [24, 0]
        }
      },
      {
        "new_button_label@common.new_button_label": {
          "text": "xbox.signin"
        }
      }
    ]
  },

  "notnow_label@common.new_button_label": {
    "text": "xbox.notnow"
  },

  "xbl_signin_button@common.new_button": {
    "$pressed_button_name": "button.xbl_signin",
    "controls": [
      {
        "default@common.new_button_state_default": {
          "controls": [
            {
              "xbl_signin_label@xbl_failed.xbl_signin_label": { }
            }
          ]
        }
      },
      {
        "hover@common.new_button_state_hover": {
          "controls": [
            {
              "xbl_signin_label@xbl_failed.xbl_signin_label": { }
            }
          ]
        }
      },
      {
        "pressed@common.new_button_state_pressed": {
          "controls": [
            {
              "xbl_signin_label@xbl_failed.xbl_signin_label": {
                "offset": [ 0, 1 ]
              }
            }
          ]
        }
      }
    ]
  },

  "notnow_button@common.new_button": {
    "$pressed_button_name": "button.xbl_notnow",
    "controls": [
      {
        "default@common.new_button_state_default": {
          "controls": [
            {
              "notnow_label@xbl_failed.notnow_label": { }
            }
          ]
        }
      },
      {
        "hover@common.new_button_state_hover": {
          "controls": [
            {
              "notnow_label@xbl_failed.notnow_label": { }
            }
          ]
        }
      },
      {
        "pressed@common.new_button_state_pressed": {
          "controls": [
            {
              "notnow_label@xbl_failed.notnow_label": {
                "offset": [ 0, 1 ]
              }
            }
          ]
        }
      }
    ]
  },

  "title_image_panel": {
    "type": "panel",
    "controls": [
      {
        "message_label": {
          "type": "label",
          "size": [ "100%", "100%" ],
          "anchor_from": "right_middle",
          "anchor_to": "right_middle",
          "offset": [0, 16],
          "text": "#message",
          "layer": 2,
          "color": [ 1,1,1 ],
          "bindings": [
            {
              "binding_name": "#message"
            }
          ]
        }
      }
    ]
  },

  "main_panel": {
    "type": "input_panel",
    "size": [ "80%", "65%" ],
    "variables": [
      {
        "requires": "$desktop_screen",
        "$xbox_button_size": [ "100%-14px", 30 ],
        "$xbox_button_offset": [ 7, -6 ]
      },
      {
        "requires": "$pocket_screen",
        "$xbox_button_size": [ "50%-7px", 30 ],
        "$xbox_button_offset": [ 7, -6 ]
      }
    ],
    "controls": [
      {
        "common_panel@common.common_panel": {
          "$dialog_background": "dialog_background_hollow_2",
          "$show_close_button": false
        }
      },
      {
        "title_label": {
          "type": "label",
          "size": [ "100%", 25 ],
          "text": "xbox.signinquestion",
          "anchor_from": "top_middle",
          "anchor_to": "top_middle",
          "layer": 2,
          "color": [ 0, 0, 0 ]
        }
      },
      {
        "myimage@title_image_panel": {
          "anchor_from": "top_left",
          "anchor_to": "top_left",
          "size": [ "100%-16px", "100%-46px" ],
          "offset": [ 8, 8 ]
        }
      },
      {
        "a_0@xbl_signin_button": {
          "size": "$xbox_button_size",
          "anchor_from": "bottom_left",
          "anchor_to": "bottom_left",
          "offset": "$xbox_button_offset"
        }
      },
      {
        "a_1@notnow_button": {
          "size": [ "50%-7px", 30 ],
          "anchor_from": "bottom_right",
          "anchor_to": "bottom_right",
          "offset": [ -7, -6 ],
          "ignored": "$desktop_screen"
        }
      }
    ]
  },

  "gamepad_helpers": {
    "type": "panel",
    "layer": 2,
    "controls": [
      {
        "gamepad_helper_a@common.gamepad_helper_a": {
          "anchor_from": "bottom_right",
          "anchor_to": "bottom_right"
        }
      }
    ]
  },

  // -----------------------------------------------
  //
  //    screen
  //
  // -----------------------------------------------
  "xbl_failed_screen@common.base_screen": {
    "button_mappings": [
      {
        "from_button_id": "button.menu_cancel",
        "to_button_id": "button.menu_exit",
        "mapping_type": "global"
      },
      {
        "from_button_id": "button.menu_up",
        "to_button_id": "button.menu_up",
        "mapping_type": "global",
        "scope": "view"
      },
      {
        "from_button_id": "button.menu_down",
        "to_button_id": "button.menu_down",
        "mapping_type": "global",
        "scope": "view"
      },
      {
        "from_button_id": "button.menu_left",
        "to_button_id": "button.menu_left",
        "mapping_type": "global",
        "scope": "view"
      },
      {
        "from_button_id": "button.menu_right",
        "to_button_id": "button.menu_right",
        "mapping_type": "global",
        "scope": "view"
      }
    ],
    "$screen_content": "xbl_failed.xbl_failed_screen_content"
  },

  "xbl_failed_screen_content": {
    "type": "panel",
    "controls": [
      {
        "root_panel": {
          "type": "panel",
          "controls": [
            { "gamepad_helpers@gamepad_helpers": { } },
            { "main_panel@main_panel": { "layer": 1 } }
          ]
        }
      }
    ]
  }
}