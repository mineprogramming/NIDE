{
  "namespace": "xbl_first_launch",


  "Xbox_icon": {
    "type": "image",
    "texture": "textures/gui/newgui/xbox4",
    "layer": 3,
    "uv": [ 0, 0 ],
    "uv_size": [ 27, 27 ],
    "size": [ 20, 20 ]
  },

  "xbl_signin_label": {
    "type": "panel",
    "layer": 2,    
    "controls": [
      {
        "Xbox_icon@Xbox_icon": {
          "anchor_from": "left_middle",
          "anchor_to": "left_middle",
          "offset": [10, 0]
        }
      },
      {
        "new_button_label@common.new_button_label": {
          "size": [ "100%-34px", "default" ],          
          "offset": [-2, 0],
          "anchor_from": "right_middle",
          "anchor_to": "right_middle",
          "text": "xbox.signinFree"
        }
      }
    ]
  },

  "xbl_signin_button@common.new_button": {
    "$pressed_button_name": "button.xbl_signin",
    "controls": [
      {
        "default@common.new_button_state_default": {
          "controls": [
            {
              "xbl_signin_label@xbl_first_launch.xbl_signin_label": { }
            }
          ]
        }
      },
      {
        "hover@common.new_button_state_hover": {
          "controls": [
            {
              "xbl_signin_label@xbl_first_launch.xbl_signin_label": { }
            }
          ]
        }
      },
      {
        "pressed@common.new_button_state_pressed": {
          "controls": [
            {
              "xbl_signin_label@xbl_first_launch.xbl_signin_label": {
                "offset": [ 0, 1 ]
              }
            }
          ]
        }
      }
    ]
  },

  "title_image_panel": {
    "type": "panel",    
    "controls": [
    {
        "message_label": {
          "type": "label",          
          "size": ["100%-93px", "100% - 3px" ],
          "anchor_from": "top_middle",
          "anchor_to": "top_middle",
          "offset": [-45, 1],
          "text": "#message",
          "layer": 2,
          "color": [ 1,1,1 ],
          "bindings": [
            {
              "binding_name": "#message"
            }
          ]
        }
      },
      {
        "title_image": {
          "type": "image",
          "layer": 1,
          "anchor_from": "top_right",
          "anchor_to": "top_right",
          "texture": "textures/gui/newgui/train",
          "offset": [ -2, 1 ],
          "size": [ 82, 75 ],
          "uv_size": [ 267, 243 ]
        }
      },
      {
        "a@xbl_signin_button": {
          "size": [ 82, 35 ],
          "anchor_from": "bottom_right",
          "anchor_to": "bottom_right",
          "offset": [ -2,-2 ]
        }
      }
    ]
  },

  "main_panel": {
    "type": "input_panel",
    "size": "$xbl_first_launch_screen_size",
    "offset": [0, "15%"],
    "controls": [
      {
        "common_panel@common.common_panel": {
          "$dialog_background": "dialog_background_hollow_3",
          "$show_divider": true,
          "$divider_offset": [ "100%-98px", "22px" ]
        }
      },
      {
        "title_label": {
          "type": "label",
          "offset": [0, 8],
          "text": "xblLogin.LoginMessageTitle",
          "anchor_from": "top_middle",
          "anchor_to": "top_middle",
          "layer": 2,
          "color": [ 0, 0, 0 ]
        }
      },
      {
        "myimage@title_image_panel": {
          "anchor_from": "top_left",
          "anchor_to": "top_left",
          "size": [ "100%-16px", "100%-31px" ],
          "offset": [ 8, 23 ]
        }
      }
    ]
  },

  "gamepad_helpers": {
    "type": "panel",
    "layer": 2,
    "controls": [
      {
        "gamepad_helper_a@common.gamepad_helper_a": {
          "anchor_from": "bottom_right",
          "anchor_to": "bottom_right"
        }
      }
    ]
  },

  // -----------------------------------------------
  //
  //    screen
  //
  // -----------------------------------------------
  "xbl_first_launch_screen@common.base_screen": {
    "button_mappings": [
      {
        "from_button_id": "button.menu_cancel",
        "to_button_id": "button.menu_exit",
        "mapping_type": "global"
      },
      {
        "from_button_id": "button.menu_up",
        "to_button_id": "button.menu_up",
        "mapping_type": "global",
        "scope": "view"
      },
      {
        "from_button_id": "button.menu_down",
        "to_button_id": "button.menu_down",
        "mapping_type": "global",
        "scope": "view"
      },
      {
        "from_button_id": "button.menu_left",
        "to_button_id": "button.menu_left",
        "mapping_type": "global",
        "scope": "view"
      },
      {
        "from_button_id": "button.menu_right",
        "to_button_id": "button.menu_right",
        "mapping_type": "global",
        "scope": "view"
      }
    ],
    "$screen_content": "xbl_first_launch.xbl_first_launch_screen_content"
  },

  "xbl_first_launch_screen_content": {
    "type": "panel",
    "controls": [
      {
        "title_panel_content@common_art.title_panel_content": { }
      },
      {
        "root_panel": {
          "type": "panel",
          "controls": [
            { "gamepad_helpers@gamepad_helpers": { } },
            { "main_panel@main_panel": { "layer": 1 } }
          ]
        }
      }
    ]
  }
}