{
  "namespace": "anvil_pocket",

  "generic_label": {
    "type": "label",
    "anchor_from": "center",
    "anchor_to": "center",
    "shadow": true
  },

  // Gamepad //

  "gamepad_helpers": {
    "type": "panel",
    "anchor_from": "bottom_middle",
    "anchor_to": "bottom_middle",
    "size": [ "98%", 16 ],
    "$icon_text_color": [ 0.0, 0.0, 0.0 ],
    "controls": [
      {
        "grey_gamepad_helper_a@common.grey_gamepad_helper_a": {
          "anchor_from": "left_middle",
          "anchor_to": "left_middle"
        }
      },
      {
        "grey_gamepad_helper_b@common.grey_gamepad_helper_b": {
          "anchor_from": "center",
          "anchor_to": "center"
        }
      },
      {
        "grey_gamepad_helper_x@common.grey_gamepad_helper_x": {
          "anchor_from": "right_middle",
          "anchor_to": "right_middle"
        }
      }
    ]
  },

  // Backgrounds //

  "background_image@common.sprite_sheet_base": {
    "size": [ "100%", "100%" ],
    "nineslice_size": 4.0,
    "uv": [ 0, 0 ],
    "uv_size": [ 16, 16 ]
  },

  // Arrow //

  "arrow_icon@common.sprite_sheet_base": {
    "uv": [ 72, 20 ],
    "uv_size": [ 24, 16 ],
    "size": [ 24, 16 ]
  },

  // Labels //

  "cost_label@anvil_pocket.generic_label": {
    "shadow": true,
    "color": "#ff00ff",
    "text": "#text",
    "anchor_from": "left_middle",
    "anchor_to": "left_middle"

  },
  "title_label@anvil_pocket.generic_label": {
    "anchor_from": "left_middle", // the parent
    "anchor_to": "left_middle", // this control
    "text": "container.repair",
    "color": "white",
    "shadow": true
  },

  // Text Edit //

  "text_edit_control@common.text_edit_box": {
    "anchor_from": "left_middle", // the parent
    "anchor_to": "left_middle", // this control
    "size": [ 142, 16 ],

    "property_bag": {
      "#property_field": "#item_name"
    },
    "max_length": 30,
    "$text_edit_binding_name": "#text_box_item_name"
  },
  "anvil_title_and_text_panel": {
    "type": "panel",
    "anchor_from": "left_middle",
    "anchor_to": "left_middle",
    "controls": [
      {
        "title_label@anvil_pocket.title_label": {
          "layer": 1,
          "offset": [ 5, -8 ]
        }
      },
      {
        "text_edit_control@anvil_pocket.text_edit_control": {
          "offset": [ 0, 8 ]
        }
      }
    ]
  },

  // Slots //

  "slots_panel": {
    "type": "panel",
    "anchor_from": "left_middle",
    "anchor_to": "left_middle",
    "controls": [
      {
        "input_slot@common.pocket_ui_container_selectable_slot_item": {
          "offset": [ 0, 0 ],
          "anchor_from": "left_middle",
          "anchor_to": "left_middle",
          "$item_collection_name": "anvil_input_items",
          "property_bag": {
            "#start_selected": true
          }
        }
      },
      {
        "material_slot@common.pocket_ui_container_selectable_slot_item": {
          "offset": [ 48, 0 ],
          "anchor_from": "left_middle",
          "anchor_to": "left_middle",
          "$item_collection_name": "anvil_material_items"
        }
      },
      {
        "result_slot@common.pocket_ui_container_selectable_slot_item": {
          "offset": [ 109, 0 ],
          "anchor_from": "left_middle",
          "anchor_to": "left_middle",
          "$item_collection_name": "anvil_result_items",
          "$controller_button_action": "button.container_auto_place"
        }
      },
      {
        "plus_sign@anvil_pocket.generic_label": {
          "shadow": true,
          "text": "+",
          "offset": [ 38, 0 ],
          "anchor_from": "left_middle",
          "anchor_to": "left_middle",
          "layer": 1
        }
      },
      {
        "arrow@common.sprite_sheet_base": {
          "uv": [ 73, 20 ],
          "uv_size": [ 22, 15 ],
          "size": [ 22, 15 ],
          "anchor_from": "left_middle",
          "anchor_to": "left_middle",
          "offset": [ 83, 0 ],
          "controls": [
            {
              "cross_out": {
                "type": "image",
                "layer": 1,
                "texture": "textures/gui/newgui/anvil-crossout",
                "bindings": [
                  {
                    "binding_name": "#cross_out_icon",
                    "binding_name_override": "#visible"
                  }
                ]
              }
            }
          ]
        }
      }
    ]
  },

  // Anvil Panel //

  "anvil_contents_panel": {
    "type": "panel",
    "size": [ "100%", "100%" ],
    "controls": [
      {
        "red_cost@anvil_pocket.cost_label": {
          "offset": [ 40, -27 ],
          "color": [ 1.0, 0.37, 0.37, 1.0 ],
          "bindings": [
            {
              "binding_name": "#cost_text",
              "binding_name_override": "#text"
            },
            {
              "binding_name": "#cost_text_red",
              "binding_name_override": "#visible"
            }
          ]
        }
      },
      {
        "green_cost@anvil_pocket.cost_label": {
          "offset": [ 40, -27 ],
          "color": [ 0.5, 1.0, 0.125, 1.0 ],
          "bindings": [
            {
              "binding_name": "#cost_text",
              "binding_name_override": "#text"
            },
            {
              "binding_name": "#cost_text_green",
              "binding_name_override": "#visible"
            }
          ]
        }
      },
      {
        "slots_panel@anvil_pocket.slots_panel": {
          "offset": [ 0, -2 ]
        }
      },
      {
        "anvil_title_and_text_panel@anvil_pocket.anvil_title_and_text_panel": {
          "offset": [ 0, -50 ]
        }
      }
    ]
  },

  // Inventory Grids //

  "inventory_grid": {
    "type": "grid",
    "grid_rescaling_type": "horizontal",
    "anchor_to": "top_left",
    "anchor_from": "top_left",
    "size": [ "100%", "default" ],
    "maximum_grid_items": "$container_size",
    "collection_name": "$pane_collection",
    "$item_renderer": "common.filtered_item_renderer",
    "grid_item_template": "common.pocket_ui_container_item",
    "$item_collection_name": "$pane_collection",
    "bindings": [
      {
        "binding_name": "#collection_total_items",
        "binding_name_override": "#maximum_grid_items",
        "binding_type": "collection",
        "binding_condition": "visible",
        "binding_collection_name": "$pane_collection"
      }
    ]
  },
  "inventory_panel": {
    "type": "panel",
    "size": [ "100%", "100%" ],
    "anchor_to": "center",
    "anchor_from": "center",
    "controls": [
      {
        "scrolling_panel@common.scrolling_panel": {
          "size": [ "100%-2px", "100%-2px" ],
          "anchor_to": "top_left",
          "anchor_from": "top_left",
          "$scrolling_pane_size": [ "100%", "100%-2px" ],
          "$scrolling_content": "anvil_pocket.inventory_grid",
          "$scroll_box_mouse_image_control": "common-classic.button_state_default",
          "$scroll_size": [ "8px", "100%" ]
        }
      }
    ]
  },

  // Half Screens //

  "half_screen": {
    "type": "input_panel",
    "size": [ "50%", "100%-31px" ],
    "offset": [ 0, 27 ],
    "anchor_from": "top_left",
    "anchor_to": "top_left"
  },
  "inventory_half_screen@anvil_pocket.half_screen": {
    "size": [ "32%", "100%-35px" ],
    "offset": [ 9, 31 ],

    "controls": [
      {
        "screen": {
          "type": "input_panel",
          "button_mappings": [
            {
              "from_button_id": "button.menu_cancel",
              "to_button_id": "button.container_unselect_slot",
              "mapping_type": "global"
            }
          ],
          "bindings": [
            {
              "binding_name": "#inventory_focused",
              "binding_name_override": "#modal"
            }
          ],
          "controls": [
            { "inventory_panel@anvil_pocket.inventory_panel": { } }
          ]
        }
      }
    ]
  },
  "anvil_half_screen@anvil_pocket.half_screen": {
    "anchor_from": "top_right",
    "anchor_to": "top_right",
    "size": [ "68%", "default" ],
    "offset": [ 10, 0 ],
    "controls": [
      {
        "screen": {
          "type": "input_panel",
          "bindings": [
            {
              "binding_name": "#slots_focused",
              "binding_name_override": "#modal"
            }
          ],
          "controls": [
            {
              "anvil_contents_panel@anvil_pocket.anvil_contents_panel": {
                "layer": 2
              }
            }
          ],
          "button_mappings": [
            {
              "from_button_id": "button.menu_cancel",
              "to_button_id": "button.menu_exit",
              "mapping_type": "global"
            }
          ]
        }
      }
    ]
  },

  // Header //

  "header": {
    "type": "panel",
    "size": [ "100%", 28 ],
    "anchor_from": "top_middle",
    "anchor_to": "top_middle",
    "controls": [
      {
        "header_background": {
          "type": "image",
          "nineslice_size": [ 3, 3, 3, 6 ],
          "texture": "textures/gui/newgui/TopBar",
          "uv": [ 0, 0 ],
          "uv_size": [ 5, 8 ]
        }
      },
      { "legacy_pocket_close_button@common.legacy_pocket_close_button": { } },
      {
        "panel": {
          "type": "panel",
          "anchor_from": "center",
          "anchor_to": "center",
          "controls": [
            {
              "title_label@anvil_pocket.generic_label": {
                "text": "tile.anvil.name",
                "layer": 1
              }
            }
          ]
        }
      }
    ]
  },

  // Anvil Screen //

  "anvil_panel@common.inventory_screen_common": {
    "controls": [
      { "gamepad_helpers@anvil_pocket.gamepad_helpers": { "layer": 1 } },
      { "header@anvil_pocket.header": {"layer": 1 } },
      { "bg@anvil_pocket.background_image": { } },
      {
        "inventory@anvil_pocket.inventory_half_screen": {
          "$container_size": 36,
          "$pane_collection": "combined_hotbar_and_inventory_items"
        }
      },
      { "anvil_half_screen@anvil_pocket.anvil_half_screen": { } },
      { "hold_icon@common.inventory_take_progress_icon_button": { } },
      { "flying_item_renderer@common.flying_item_renderer": { } },
      {
        "selected_item_details_factory": {
          "type": "factory",
          "control_name": "@pocket_containers.selected_item_details"
        }
      }
    ]
  }
}