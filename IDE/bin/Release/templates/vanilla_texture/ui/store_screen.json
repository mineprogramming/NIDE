{
  "namespace": "store",

  //--------------------------------------------------------------------------------
  // Controls
  //--------------------------------------------------------------------------------

  "banner_fill": {
    "type": "image",
    "texture": "textures/gui/newgui/Banners",
    "uv": [ 0, 0 ],
    "uv_size": [ 4, 4 ],
    "nineslice_size": 1
  },

  "title_label": {
    "type": "label",
    "size": [ "100%", "14px" ],
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "color": [ 0.3, 0.3, 0.3 ]
  },

  "label": {
    "type": "label",
    "size": [ "100%", "14px" ],
    "anchor_from": "top_left",
    "anchor_to": "top_left"
  },

  "chevron_image": {
    "type": "image",
    "layer": 1,
    "uv": [ 0, 0 ],
    "uv_size": [ 4, 7 ],
    "size": [ 4, 7 ],
    "texture": "$chevron_image_name"
  },

  "new_offer_icon": {
    "type": "image",
    "layer": 5,
    "texture": "textures/gui/newgui/newOffersIcon",
    "anchor_from": "top_right",
    "anchor_to": "top_right",
    "offset": [ 3, -3 ],
    "size": [ 21, 15 ],
    "uv": [ 0, 0 ],
    "uv_size": [ 21, 15 ]
  },

  "cycle_pack_button@common_buttons.light_glyph_button": {
    "$button_content": "store.chevron_image"
  },

  "cycle_pack_left_button@cycle_pack_button": {
    "anchor_from": "bottom_left",
    "anchor_to": "bottom_left",
    "$chevron_image_name": "textures/gui/newgui/chevron_left",
    "$pressed_button_name": "button.cycle_pack_left"
  },

  "cycle_pack_right_button@cycle_pack_button": {
    "anchor_from": "bottom_right",
    "anchor_to": "bottom_right",
    "$chevron_image_name": "textures/gui/newgui/chevron_right",
    "$pressed_button_name": "button.cycle_pack_right"
  },

  "restore_purchases@common.new_button": {
    "anchor_from": "center",
    "anchor_to": "center",
    "$pressed_button_name": "button.restore_store",
    "$button_label_text": "skins.restore.button"
  },

  //--------------------------------------------------------------------------------
  // Content
  //--------------------------------------------------------------------------------

  "featured_key_art": {
    "type": "panel",
    "size": [ "50%", "100%" ],
    "controls": [
      {
        "bg@banner_fill": {
          "layer": 3,
          "controls": [
            {
              "featured_key_art": {
                "type": "image",
                "layer": 4,
                "size": [ "100% - 2px", "100% - 2px" ],
                "uv": [ 0, 0 ],
                "uv_size": [ 800, 450 ],
                "bindings": [
                  {
                    "binding_name": "#featured_texture_path",
                    "binding_name_override": "#texture"
                  },
                  {
                    "binding_name": "#featured_texture_file_system",
                    "binding_name_override": "#texture_file_system"
                  }
                ]
              }
            },
            {
              "new_offer_icon@new_offer_icon": {
                "bindings": [
                  {
                    "binding_name": "#new_featured_offer",
                    "binding_name_override": "#visible"
                  }
                ]
              }
            }
          ]
        }
      }
    ]
  },

  "featured_description": {
    "type": "panel",
    "size": [ "50%", "100%" ],
    "controls": [
      {
        "bg@banner_fill": {
          "size": [ "100% + 1px", "100%" ],
          "anchor_from": "top_right",
          "anchor_to": "top_right",
          "layer": 3,
          "controls": [
            {
              "text_panel": {
                "type": "stack_panel",
                "orientation": "vertical",
                "layer": 4,
                "anchor_from": "center",
                "anchor_to": "center",
                "size": [ "100% - 10px", "100% - 10px" ],
                "controls": [
                  {
                    "header@store.label": {
                      "size": [ "100%", 20 ],
                      "text": "#featured_title",
                      "color": "yellow",
                      "bindings": [
                        {
                          "binding_name": "#featured_title"
                        }
                      ]
                    }
                  },
                  {
                    "body@store.label": {
                      "size": [ "100%", "fill" ],
                      "text": "#featured_desc",
                      "color": "white",
                      "bindings": [
                        {
                          "binding_name": "#featured_desc"
                        }
                      ]
                    }
                  },
                  {
                    "footer": {
                      "type": "panel",
                      "size": [ "100%", 10 ],
                      "controls": [
                        {
                          "footer@store.label": {
                            "size": [ "default", 10 ],
                            "text": "#featured_price",
                            "anchor_from": "bottom_right",
                            "anchor_to": "bottom_right",
                            "color": "yellow",
                            "bindings": [
                              {
                                "binding_name": "#featured_price"
                              }
                            ]
                          }
                        }
                      ]
                    }
                  }
                ]
              }
            }
          ]
        }
      }
    ]
  },

  "featured": {
    "type": "panel",
    "controls": [
      {
        "featured_pic_and_desc": {
          "type": "stack_panel",
          "orientation": "horizontal",
          "size": [ "100% - 4px", "100%" ],
          "controls": [
            {
              "featured_key_art@featured_key_art": {
                "anchor_from": "top_left",
                "anchor_to": "top_left"
              }
            },
            {
              "featured_description@featured_description": {
                "anchor_from": "top_left",
                "anchor_to": "top_left"
              }
            }
          ]
        }
      },
      {
        "featured_button@common.button": {
          "$pressed_button_name": "button.select_featured",
          "layer": 4,
          "size": [ "100%", "100%" ],
          "offset": [ 0, 0 ],
          "default_control": "",
          "hover_control": "hover",
          "pressed_control": "pressed",
          "focus_enabled": true,
          "controls": [
            {
              "hover@common.focus_border_white": {
                "size": [ "100% - 4px", "100%" ]
              }
            },
            {
              "pressed@common.focus_border_white": {
                "size": [ "100% - 4px", "100%" ]
              }
            }
          ]
        }
      }
    ]
  },

  "offer_key_art": {
    "type": "image",
    "size": [ "100% - 2px", "100% - 2px" ],
    "bindings": [
      {
        "binding_type": "collection_details",
        "binding_collection_name": "category_collection",
        "binding_collection_prefix": "category"
      },
      {
        "binding_type": "collection",
        "binding_collection_name": "offers_collection",
        "binding_name": "#offer_texture_name",
        "binding_name_override": "#texture"
      },
      {
        "binding_type": "collection",
        "binding_collection_name": "offers_collection",
        "binding_name": "#offer_texture_file_system",
        "binding_name_override": "#texture_file_system"
      }
    ]
  },

  "offer_download_progress": {
    "type": "panel",
    "bindings": [
      {
        "binding_type": "collection_details",
        "binding_collection_name": "category_collection",
        "binding_collection_prefix": "category"
      },
      {
        "binding_type": "collection",
        "binding_collection_name": "offers_collection",
        "binding_name": "#progress_visible",
        "binding_name_override": "#visible"
      }
    ],
    "controls": [
      {
        "bg@store.banner_fill": {
          "anchor_from": "bottom_left",
          "anchor_to": "bottom_left",
          "size": [ "100% - 4px", "35%" ],
          "min_size": [ "100% - 4px", 23 ],
          "offset": [ 2, -2 ],
          "alpha": 0.8,
          "controls": [
            {
              "label": {
                "type": "label",
                "color": "white",
                "layer": 7,
                "anchor_from": "top_left",
                "anchor_to": "top_left",
                "size": [ "100%", "100%" ],
                "offset": [ 3, 2 ],
                "text": "store.downloading"
              }
            },
            {
              "bar@file_upload.progress_bar_icon": {
                "size": [ "100% - 4px", 5 ],
                "offset": [ 2, -2 ],
                "anchor_from": "bottom_left",
                "anchor_to": "bottom_left",
                "$progress_bindings": [
                  {
                    "binding_type": "collection_details",
                    "binding_collection_name": "category_collection",
                    "binding_collection_prefix": "category"
                  },
                  {
                    "binding_type": "collection",
                    "binding_collection_name": "offers_collection",
                    "binding_name": "#progress_percentage",
                    "binding_name_override": "#clip_ratio"
                  }
                ]
              }
            }
          ]
        }
      }
    ]
  },

  "offer_grid_item": {
    "type": "panel",
    "size": [ "default", "100% - 6px" ],
    "controls": [
      {
        "frame@banner_fill": {
          "size": [ "100% - 2px", "100%" ],
          "layer": 3,
          "controls": [
            {
              "key_art@store.offer_key_art": {
                "layer": 5
              }
            },
            {
              "progress@store.offer_download_progress": {
                "layer": 6
              }
            },            
            {
              "offer_button": {
                "type": "button",

                "$focus_id|default": "",
                "$focus_override_down|default": "",
                "$focus_override_up|default": "",
                "$focus_override_left|default": "",
                "$focus_override_right|default": "",
                "focus_identifier": "$focus_id",
                "focus_change_down": "$focus_override_down",
                "focus_change_up": "$focus_override_up",
                "focus_change_left": "$focus_override_left",
                "focus_change_right": "$focus_override_right",
                "focus_enabled": true,

                "layer": 4,
                "default_control": "",
                "hover_control": "hover",
                "pressed_control": "pressed",
                "bindings": [
                  {
                    "binding_type": "collection_details",
                    "binding_collection_name": "category_collection",
                    "binding_collection_prefix": "category"
                  },
                  {
                    "binding_type": "collection_details",
                    "binding_collection_name": "offers_collection",
                    "binding_collection_prefix": "offers"
                  }
                ],
                "button_mappings": [
                  {
                    "from_button_id": "button.menu_select",
                    "to_button_id": "button.select_offer",
                    "mapping_type": "pressed"
                  },
                  {
                    "from_button_id": "button.menu_ok",
                    "to_button_id": "button.select_offer",
                    "mapping_type": "pressed"
                  }
                ],
                "controls": [
                  {
                    "hover@common.focus_border_white": {
                    }
                  },
                  {
                    "pressed@common.focus_border_white": {
                    }
                  },
                  {
                    "new_icon@new_offer_icon": {
                      "layer": 8,
                      "bindings": [
                        {
                          "binding_type": "collection_details",
                          "binding_collection_name": "category_collection",
                          "binding_collection_prefix": "category"
                        },
                        {
                          "binding_type": "collection",
                          "binding_collection_name": "offers_collection",
                          "binding_name": "#new_offer",
                          "binding_name_override": "#visible"
                        }
                      ]
                    }
                  }
                ]
              }
            }
          ]
        }
      }
    ],
    "bindings": [
      {
        "binding_type": "collection_details",
        "binding_collection_name": "category_collection",
        "binding_collection_prefix": "category"
      },
      {
        "binding_type": "collection",
        "binding_collection_name": "offers_collection",
        "binding_name": "#valid_offer_index",
        "binding_name_override": "#visible"
      }
    ]
  },

  "offer_grid": {
    "type": "grid",
    "size": [ "100% - 60px", "100%" ],
    "offset": [ 0, 3 ],
    "grid_item_template": "store.offer_grid_item",
    "grid_dimension_binding": "#offer_grid_dimensions",
    "collection_name": "offers_collection",
    "bindings": [
      {
        "binding_name": "#offer_grid_dimensions"
      }
    ]
  },

  "category_grid_item": {
    "type": "panel",
    "size": [ "100%", "18.7497%x + 7.75px" ], // Adjusted Y slightly after min/max came into RI to take up remaining pixel gap
    // Calculation based upon scaling three 16:9 images to maintain layout and aspect ratio
    // Width of Buttons with indent and black border + style guide spacing = (100% - (30 + 30 + 4 + 4 + 2 + 2 + 2 + 2)px)
    // Height calculation for key art images to maintain 16:9 aspect ratio = (100/177.78)/3
    // Height of indents, black borders and text = (8 + 13)px
    // Formula as follows: ((100%x - 76px) * (100/177.78)/3) + 21px = 18.7497%x - 14.249px + 21px
    "controls": [
      {
        "content": {
          "type": "panel",
          "size": [ "100% + 2px", "100%" ],
          "offset": [ -1, 0 ],
          "controls": [
            {
              "label@label": {
                "anchor_from": "top_left",
                "anchor_to": "top_left",
                "size": [ "100%", 10 ],
                "offset": [ 8, 2 ],
                "text": "#offer_category_name",
                "bindings": [
                  {
                    "binding_type": "collection",
                    "binding_collection_name": "category_collection",
                    "binding_name": "#offer_category_name"
                  }
                ]
              }
            },
            {
              "bg@banner_fill": {
                "size": [ "100% - 6px", "100% - 14px" ],
                "offset": [ 1, 6 ],
                "controls": [
                  {
                    "button_frame_0": {
                      "type": "panel",
                      "size": [ 30, "100%" ],
                      "anchor_from": "top_left",
                      "anchor_to": "top_left",
                      "controls": [
                        {
                          "cycle_pack_left_button@cycle_pack_left_button": {
                            "$pressed_button_name": "button.cycle_offer_left",
                            "size": [ "100% - 6px", "100% - 6px" ],
                            "anchor_from": "center",
                            "anchor_to": "center",
                            "bindings": [
                              {
                                "binding_type": "collection_details",
                                "binding_collection_name": "category_collection"
                              }
                            ]
                          }
                        }
                      ]
                    }
                  },
                  {
                    "offer_grid@store.offer_grid": {
                    }
                  },
                  {
                    "button_frame_1": {
                      "type": "panel",
                      "size": [ 30, "100%" ],
                      "anchor_from": "top_right",
                      "anchor_to": "top_right",
                      "controls": [
                        {
                          "cycle_pack_right_button@cycle_pack_right_button": {
                            "$pressed_button_name": "button.cycle_offer_right",
                            "size": [ "100% - 6px", "100% - 6px" ],
                            "anchor_from": "center",
                            "anchor_to": "center",
                            "bindings": [
                              {
                                "binding_type": "collection_details",
                                "binding_collection_name": "category_collection"
                              }
                            ]
                          }
                        }
                      ]
                    }
                  }
                ]
              }
            }
          ]
        }
      }
    ]
  },

  "category_grid": {
    "type": "grid",
    "size": [ "100%", "default" ], // height is 'default' therefore based on 'size of children'
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "grid_item_template": "store.category_grid_item",
    "grid_dimension_binding": "#category_grid_dimensions",
    "collection_name": "category_collection",
    "bindings": [
      {
        "binding_name": "#category_grid_dimensions"
      }
    ]
  },

  "scrolling_content_stack": {
    "anchor_from": "top_middle",
    "anchor_to": "top_middle",
    "type": "stack_panel",
    "orientation": "vertical",
    "controls": [
      {
        "empty_panel_0": {
          "type": "panel",
          "size": [ 0, 2 ]
        }
      },
      {
        "featured@featured": {
          "size": [ "100%", "28.1247%x" ] // The y value is = (100%/177.78%)/2 for the 16:9 aspect ratio of the key art taking up half the screen width
        }
      },
      {
        "category_grid@category_grid": {
          "size": [ "100%", "default" ]
        }
      },
      {
        "footer": {
          "type": "panel",
          "visible": "$requires_restore_button",
          "size": [ "100%", 30 ],
          "controls": [
            {
              "restore_purchases@restore_purchases": {
                "size": [ "28%", 30 ]
              }
            }
          ]
        }
      },
      {
        "empty_panel_1": {
          "type": "panel",
          "size": [ 0, 1 ]
        }
      }
    ]
  },

  "main_panel": {
    "type": "input_panel",
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "offset": [ 0, 0 ],
    "size": [ "100%", "100%" ],
    "controls": [
      {
        "offers@common.scrolling_panel": {
          "anchor_from": "top_left",
          "anchor_to": "top_left",
          "$scrolling_pane_size": [ "100%", "100%" ],
          "$scrolling_pane_offset": [ 0, 0 ],
          "$scroll_size": [ 5, "100% - 4px" ],
          "$scrolling_content": "store.scrolling_content_stack",
          "$scroll_bar_left_padding_size": [ 0, 0 ],
          "$show_background": false,
          "$bar_visible": false
        }
      }
    ]
  },
  
  //--------------------------------------------------------------------------------
  // Screen
  //--------------------------------------------------------------------------------

  "store_screen@common.base_screen": {
    "button_mappings": [
      {
        "from_button_id": "button.menu_cancel",
        "to_button_id": "button.menu_exit",
        "mapping_type": "global"
      },
      {
        "from_button_id": "button.menu_up",
        "to_button_id": "button.menu_up",
        "mapping_type": "global",
        "scope": "view"
      },
      {
        "from_button_id": "button.menu_down",
        "to_button_id": "button.menu_down",
        "mapping_type": "global",
        "scope": "view"
      },
      {
        "from_button_id": "button.menu_left",
        "to_button_id": "button.menu_left",
        "mapping_type": "global",
        "scope": "view"
      },
      {
        "from_button_id": "button.menu_right",
        "to_button_id": "button.menu_right",
        "mapping_type": "global",
        "scope": "view"
      }
    ],
    "$default_text_color": [ 0.3, 0.3, 0.3 ],
    "$screen_content": "store.store_screen_content"
  },

  "store_screen_content": {
    "type": "panel",
    "controls": [
      {
        "main_panel@common_dialogs.main_panel_no_buttons": {
          "size": "$store_screen_size",
          "offset": [ 0, 0 ],
          "$text_name": "store.title",
          "$child_control": "store.main_panel"
        }
      }
    ]
  }
}